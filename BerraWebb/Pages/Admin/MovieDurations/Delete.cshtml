@page
@model BerraWebb.Pages.Admin.MovieDurations.DeleteModel

<form method="post">
    <input hidden asp-for="MovieDuration.Id" />
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Movie Duration</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="MovieDuration.Name"></label>
            <input asp-for="MovieDuration.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="MovieDuration.Date"></label>
            <input asp-for="MovieDuration.Date" disabled class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@*Client Side Validation*@
@section Scripts{ 
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}